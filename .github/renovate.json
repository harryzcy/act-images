{
  "extends": [
    "github>harryzcy/renovate-config"
  ],
  "ignorePaths": [
    "requirements-*.txt"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "images/ubuntu/22.04/scripts/*.sh",
        "images/ubuntu/24.04/scripts/*.sh",
        "images/ubuntu/22.04/packages.json",
        "images/ubuntu/24.04/packages.json",
        "images/ubuntu/22.04/README.md",
        "images/ubuntu/24.04/README.md"
      ],
      "matchStrings": [
        "PYTHON_VERSION=\"(?<currentValue>.*?)\"\\n",
        "\"name\": \"Python\",\\n *?\"version\": \"(?<currentValue>.*?)\"",
        "Python (?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "python",
      "datasourceTemplate": "python-version"
    }
  ]
}
